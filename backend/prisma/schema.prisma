generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Camera {
  id        String   @id @default(cuid())
  name      String
  rtspUrl   String
  location  String?
  enabled   Boolean  @default(false)
  status    String   @default("OFFLINE") // OFFLINE, CONNECTING, STREAMING, ERROR
  createdAt DateTime @default(now())
  alerts    Alert[]

  @@map("cameras")
}

model Alert {
  id         String   @id @default(cuid())
  cameraId   String
  camera     Camera   @relation(fields: [cameraId], references: [id])
  frameUrl   String?
  detectedAt DateTime @default(now())
  metadata   Json?

  @@map("alerts")
}
